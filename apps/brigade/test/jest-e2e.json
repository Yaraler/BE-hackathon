{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "shared/*": [
    "libs/shared/*"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/contracts(.*)$": "<rootDir>/../../libs/contracts/src$1",
    "^@app/contracts/(.*)$": "<rootDir>/../../libs/contracts/src/$1",
    "^@app/filter(.*)$": "<rootDir>/../../libs/filter/src$1",
    "^@app/filter/(.*)$": "<rootDir>/../../libs/filter/src/$1",
    "^@app/my-logger(.*)$": "<rootDir>/../../libs/my-logger/src$1",
    "^@app/my-logger/(.*)$": "<rootDir>/../../libs/my-logger/src/$1",
    "^@app/strategy(.*)$": "<rootDir>/../../libs/strategy/src$1",
    "^@libs/(.*)$": "<rootDir>/../../libs/$1",
    "^@shared/(.*)$": "<rootDir>/../../libs/$1"
  }
}
